<div class="text-center mt-5">

    <h1> Install/Uninstall Games </h1>

    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-10">
                <%= form_with(model: @user, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
                    <div class="form-group row">
                        <%= f.label :Games, class: "col-2 col-form-label text-light" %>
                        <div class="col-10"> 
                            <%= f.collection_select(:game_ids, Game.all, :id, :name,
                            {}, { include_blank: true, multiple: true, size: 3, class: "custom-select" }) %>
                        </div>
                    </div>

                    <div class="form-group row justify-content-center">
                        <%= f.submit "Update Games", class: "btn btn-outline-light btn-lg" %>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>